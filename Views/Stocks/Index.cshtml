@model FinanceScraper3.Models.StockViewModel

@{
    ViewData["Title"] = "Your stocks for this snapshot:";
}
<br>

    <h2>@ViewData["Title"]</h2>

    <table class="table table-striped table-bordered">
        <thead>
            <tr style="font-weight: bold">
                <td><a asp-action="Index" asp-route-sortOrder="@ViewData["StockSymbolSortParm"]">Symbol</a></td>
                <td><a asp-action="Index" asp-route-sortOrder="@ViewData["CurrentPriceSortParm"]">Price</a></td>
                <td><a asp-action="Index" asp-route-sortOrder="@ViewData["ChangeByDollarSortParm"]">Change By $</a></td>
                <td><a asp-action="Index" asp-route-sortOrder="@ViewData["ChangeByPercentSortParm"]">Change By %</a></td>          
                <td><a asp-action="Index" asp-route-sortOrder="@ViewData["SharesSortParm"]">Shares</a></td>
                <td><a asp-action="Index" asp-route-sortOrder="@ViewData["CostBasisSortParm"]">Cost Basis</a></td>
                <td><a asp-action="Index" asp-route-sortOrder="@ViewData["MarketValueSortParm"]">Market Value</a></td>
                <td><a asp-action="Index" asp-route-sortOrder="@ViewData["DayGainByDollarSortParm"]">Day Gain By $</a></td>
                <td><a asp-action="Index" asp-route-sortOrder="@ViewData["DayGainByPercentSortParm"]">Day Gain By %</a></td>
                <td><a asp-action="Index" asp-route-sortOrder="@ViewData["TotalGainByDollarSortParm"]">Total Gain By $</a></td>
                <td><a asp-action="Index" asp-route-sortOrder="@ViewData["TotalGainByPercentSortParm"]">Total Gain By %</a></td>
                <td><a asp-action="Index" asp-route-sortOrder="@ViewData["LotsSortParm"]">Lots</a></td>
                <td><a asp-action="Index" asp-route-sortOrder="@ViewData["NotesSortParm"]">Notes</a></td>
            </tr>
        </thead>

        @if(Model == null){
            <span>no items found</span>
        }
        else {
            @foreach (var snap in Model.Stocks)
            {   
                <tr>
                    <td style="font-weight: bold">@Html.DisplayFor(x => snap.StockSymbol)</td>
                    <td>@Html.DisplayFor(x => snap.CurrentPrice)</td>
                    <td>@Html.DisplayFor(x => snap.ChangeByDollar)</td>
                    <td>@Html.DisplayFor(x => snap.ChangeByPercent)</td>
                    <td>@Html.DisplayFor(x => snap.Shares)</td>
                    <td>@Html.DisplayFor(x => snap.CostBasis)</td>
                    <td>@Html.DisplayFor(x => snap.MarketValue)</td>
                    <td>@Html.DisplayFor(x => snap.DayGainByDollar)</td>
                    <td>@Html.DisplayFor(x => snap.DayGainByPercent)</td>
                    <td>@Html.DisplayFor(x => snap.TotalGainByDollar)</td>
                    <td>@Html.DisplayFor(x => snap.TotalGainByPercent)</td>
                    <td>@Html.DisplayFor(x => snap.Lots)</td>
                    <td>@Html.DisplayFor(x => snap.Notes)</td>
                </tr>
                }
        }
    </table>
