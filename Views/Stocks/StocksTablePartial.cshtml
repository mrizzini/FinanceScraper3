@model FinanceScraper3.Models.StockViewModel


<form asp-action="Index" method="get">
        <div class="form-actions no-color">
            <p>Find by stock symbol: <input type="text" name="SearchString" value="@ViewData["currentFilter"]"/>
                <input type="submit" value="Search" class="btn btn-default"/> |
                <a asp-action="Index">Back to Full List</a>
            </p>
        </div>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr style="font-weight: bold">
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["StockSymbolSortParm"]">Symbol</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["CurrentPriceSortParm"]">Price</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["ChangeByDollarSortParm"]">Change By $</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["ChangeByPercentSortParm"]">Change By %</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["SharesSortParm"]">Shares</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["CostBasisSortParm"]">Cost Basis</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["MarketValueSortParm"]">Market Value</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["DayGainByDollarSortParm"]">Day Gain By $</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["DayGainByPercentSortParm"]">Day Gain By %</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["TotalGainByDollarSortParm"]">Total Gain By $</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["TotalGainByPercentSortParm"]">Total Gain By %</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["LotsSortParm"]">Lots</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["NotesSortParm"]">Notes</a></th>
        </tr>
    </thead>

        @if(Model == null)
        {
            <span>no items found</span>
        }
        else 
        {
            @foreach (var snap in Model.Stocks)
            {   
                <tr>
                    <td style="font-weight: bold">@Html.DisplayFor(x => snap.StockSymbol)</td>
                    <td>@Html.DisplayFor(x => snap.CurrentPrice)</td>
                    <td>@Html.DisplayFor(x => snap.ChangeByDollar)</td>
                    <td>@Html.DisplayFor(x => snap.ChangeByPercent)</td>
                    <td>@Html.DisplayFor(x => snap.Shares)</td>
                    <td>@Html.DisplayFor(x => snap.CostBasis)</td>
                    <td>@Html.DisplayFor(x => snap.MarketValue)</td>
                    <td>@Html.DisplayFor(x => snap.DayGainByDollar)</td>
                    <td>@Html.DisplayFor(x => snap.DayGainByPercent)</td>
                    <td>@Html.DisplayFor(x => snap.TotalGainByDollar)</td>
                    <td>@Html.DisplayFor(x => snap.TotalGainByPercent)</td>
                    <td>@Html.DisplayFor(x => snap.Lots)</td>
                    <td>@Html.DisplayFor(x => snap.Notes)</td>
                </tr>
            }
        }
</table>